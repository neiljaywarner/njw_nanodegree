<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <TextView android:layout_gravity="center_horizontal"
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:text="@string/caption"
        android:layout_width="wrap_content"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content" />


    <!-- TODO: Each app's color pallette match this button for 'lightPrimary' -->
    <!-- TODO: Consider even making the text match appropriately from materialpallete -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        <Button
            style="@style/AppButton"
            android:background="@color/lime"
            android:text="@string/app_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            style="@style/AppButton"
            android:background="@color/brown"
            android:text="@string/app_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            style="@style/AppButton"
            android:background="@color/teal"
            android:text="@string/app_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            style="@style/AppButton"
            android:background="@color/purple"
            android:text="@string/app_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            style="@style/AppButton"
            android:background="@color/deep_orange"
            android:text="@string/app_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            style="@style/AppButton"
            android:background="@color/deep_purple"
            android:text="@string/app_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        </LinearLayout>


    </ScrollView>

</LinearLayout>
